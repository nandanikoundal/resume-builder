<?xml version="1.0" encoding="utf-8"?>
<layout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text= "Referee's Name"
            android:textSize="20sp"
            android:id="@+id/tv2Ref"
            android:textStyle="bold"
            android:textColor="#3131AF"
            android:layout_marginTop="25sp"
            android:layout_marginLeft="10sp">

        </TextView>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etRef"
            android:textColor="#2D4793"
            android:textStyle="normal"
            android:layout_marginLeft="10sp">

        </EditText>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text= "Job Title"
            android:textSize="20sp"
            android:id="@+id/tv2Job"
            android:textStyle="bold"
            android:textColor="#3131AF"
            android:layout_marginTop="25sp"
            android:layout_marginLeft="10sp">

        </TextView>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etJob"
            android:textColor="#2D4793"
            android:textStyle="normal"
            android:layout_marginLeft="10sp">

        </EditText>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text= "Company Name"
            android:textSize="20sp"
            android:id="@+id/tv2CompName"
            android:textStyle="bold"
            android:textColor="#3131AF"
            android:layout_marginTop="25sp"
            android:layout_marginLeft="10sp">

        </TextView>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etCompName"
            android:textColor="#2D4793"
            android:textStyle="normal"
            android:layout_marginLeft="10sp">

        </EditText>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text= "Email"
            android:textSize="20sp"
            android:id="@+id/tv2Email"
            android:textStyle="bold"
            android:textColor="#3131AF"
            android:layout_marginTop="25sp"
            android:layout_marginLeft="10sp">

        </TextView>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etEmail"
            android:textColor="#2D4793"
            android:textStyle="normal"
            android:layout_marginLeft="10sp">

        </EditText>

        <Button
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:backgroundTint="#FF69B4"
            android:text="Add"
            android:layout_gravity="center"
            android:layout_marginTop="25sp"
            android:id="@+id/btnAdd4">

        </Button>

        </LinearLayout>
        </ScrollView>
</LinearLayout>
</layout>